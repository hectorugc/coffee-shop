{{- 'custom-testimonial.css' | asset_url | stylesheet_tag -}}
{{- 'flickity.css' | asset_url | stylesheet_tag -}}
{{- 'flickity.pkgd.min.js' | asset_url | script_tag -}}
<script src="{{ 'custom-testimonials-slider.js' | asset_url }}" type="module" defer="defer"></script>

{%- style -%}
  #shopify-section-{{ section.id }} {
    --heading-size-desktop: {{ section.settings.heading_font_size }}px;
    --heading-size-mobile: {{ section.settings.heading_font_size | times: 0.75 | round }}px;
    --heading-align: {{ section.settings.heading_alignment }};
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --star-color: {{ section.settings.star_color }};
  }

  .testimonial-section-wrapper {
    padding-top: var(--section-padding-top);
    padding-bottom: var(--section-padding-bottom);
    overflow: hidden;
  }

  .testimonial-title {
    margin: 0 0 30px 0;
    line-height: 1.2;
    text-align: var(--heading-align);
    font-size: var(--heading-size-mobile); 
    width: 100%;
    display: block;
  }

  @media screen and (min-width: 750px) {
    .testimonial-title {
      font-size: var(--heading-size-desktop);
    }
  }

  /* Star Styling */
  .stars-wrapper {
    color: var(--star-color);
    font-size: 1.2rem;
    margin-bottom: 10px;
    letter-spacing: 2px;
  }

  .verified-badge {
    color: #28a745;
    font-size: 0.85em;
    margin-left: 4px;
  }
{%- endstyle -%}

<div class="testimonial-section-wrapper">
  
  {%- if section.settings.section_title != blank -%}
    <div class="testimonial-header container">
      <{{ section.settings.heading_tag }} class="testimonial-title">
        {{ section.settings.section_title | escape }}
      </{{ section.settings.heading_tag }}>
    </div>
  {%- endif -%}

  <div class="carousel-container">
    {% for block in section.blocks %}
      <div class="review-card" {{ block.shopify_attributes }}>
        <div class="card-image">
          {%- if block.settings.author_image != blank -%}
            {{ block.settings.author_image | image_url: width: 500 | image_tag: 
              loading: 'lazy', 
              alt: block.settings.author_name,
              class: 'review-card-img'
            }}
          {%- endif -%}
        </div>

        <div class="card-content">
          <div class="stars-wrapper">
            {% assign rating = block.settings.star_rating %}
            {% for i in (1..5) %}
              {% if i <= rating %}★{% else %}☆{% endif %}
            {% endfor %}
          </div>

          <h3 class="user-name">
            {{ block.settings.author_name }} 
            {% if block.settings.show_verified %}
              <span class="verified-badge">✔</span>
            {% endif %}
          </h3>
          <p class="review-text">{{ block.settings.testimonial_text }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Testimonial Section",
  "settings": [
    {
      "type": "header",
      "content": "Heading Settings"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Heading Text",
      "default": "Customer Reviews"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "label": "SEO Tag",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" }
      ],
      "default": "h2"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "min": 16,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Heading Font Size (Desktop)",
      "default": 32
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "star_color",
      "label": "Star Color",
      "default": "#ffcc00"
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "author_image",
          "label": "Author Image"
        },
        {
          "type": "range",
          "id": "star_rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "label": "Star Rating",
          "default": 5
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Author Name",
          "default": "John Doe"
        },
        {
          "type": "checkbox",
          "id": "show_verified",
          "label": "Show Verified Check",
          "default": true
        },
        {
          "type": "textarea",
          "id": "testimonial_text",
          "label": "Testimonial Text",
          "default": "Best coffee I've ever had!"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Testimonials"
    }
  ]
}
{% endschema %}